<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel_layout"
    >
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_view"
    android:background="@color/sa_bkg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp"
        android:paddingBottom="30sp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:maxWidth="250sp"
             android:paddingLeft="5sp"
             android:paddingBottom="5sp"
             android:paddingTop="5sp"
             android:paddingRight="10sp"
             android:background="@drawable/sa_ques_bkg"
             android:text="Please note that information from this chat will be used for monitoring and management of the current health crisis and research in the fight against COVID-19."
             android:textSize="14sp"
             android:textColor="@color/ans_color"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250sp"
        android:id="@+id/gender_que"
        android:layout_marginTop="10sp"
        android:paddingLeft="5sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingRight="10sp"
        android:background="@drawable/sa_ques_bkg"
        android:text="What is your gender?"
        android:textSize="14sp"
        android:textColor="@color/ans_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/gender_option"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:id="@+id/gen_male"
                android:visibility="visible"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="Male"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:id="@+id/gen_female"
                android:visibility="visible"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="Female"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:id="@+id/gen_other"
                android:visibility="visible"
                android:layout_marginTop="20sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="Other"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250sp"
        android:id="@+id/gen_ans"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_marginTop="10sp"
        android:paddingLeft="5sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingRight="5sp"
        android:background="@drawable/sa_ans_bkg"
        android:text="Male"
        android:textSize="14sp"
        android:textColor="@color/black_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250sp"
        android:id="@+id/age_que"
        android:visibility="gone"
        android:layout_marginTop="10sp"
        android:paddingLeft="5sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingRight="10sp"
        android:background="@drawable/sa_ques_bkg"
        android:text="Please type your age."
        android:textSize="14sp"
        android:textColor="@color/ans_color"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_marginTop="15sp"
            app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:layout_width="250sp"
            android:layout_height="50sp"
            android:maxWidth="250sp"
            android:inputType="number"
            android:id="@+id/age_option"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:paddingRight="5sp"
            android:hint="Please type your age."
            android:layout_gravity="center"
            android:background="@drawable/sa_ans_bkg"
            android:textSize="14sp"
            android:textColor="@color/black_color"/>
        </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250sp"
        android:id="@+id/age_ans"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_marginTop="5sp"
        android:paddingLeft="5sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingRight="5sp"
        android:background="@drawable/sa_ans_bkg"
        android:text="22"
        android:textSize="14sp"
        android:textColor="@color/black_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250sp"
        android:id="@+id/sym_que"
        android:visibility="gone"
        android:layout_marginTop="10sp"
        android:paddingLeft="5sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingRight="10sp"
        android:background="@drawable/sa_ques_bkg"
        android:text="Are you experiencing any of the following symptoms?"
        android:textSize="14sp"
        android:textColor="@color/ans_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/sym_options"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:id="@+id/sym_cough"
                android:visibility="visible"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="Cough"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:id="@+id/sym_fever"
                android:visibility="visible"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="Fever"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:id="@+id/sym_breathe"
                android:visibility="visible"
                android:layout_marginTop="20sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="Difficulty in Breathing"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250sp"
            android:id="@+id/sym_none"
            android:visibility="gone"
            android:layout_marginTop="10sp"
            android:paddingLeft="10sp"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:background="@color/ans_color"
            android:text="None of the Above"
            android:textSize="14sp"
            android:textColor="@color/PrimaryDarkColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250sp"
        android:id="@+id/sym_ans"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_marginTop="10sp"
        android:paddingLeft="5sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingRight="5sp"
        android:background="@drawable/sa_ans_bkg"
        android:text="Cough,Fever"
        android:textSize="14sp"
        android:textColor="@color/black_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250sp"
        android:id="@+id/cond_que"
        android:visibility="gone"
        android:layout_marginTop="10sp"
        android:paddingLeft="5sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingRight="10sp"
        android:background="@drawable/sa_ques_bkg"
        android:text="Have you ever had any of the following:"
        android:textSize="14sp"
        android:textColor="@color/ans_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/cond_options"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:id="@+id/cond_db"
                android:visibility="visible"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="Diabetes"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:id="@+id/cond_ht"
                android:visibility="visible"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="Hypertension"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:id="@+id/cond_ld"
                android:visibility="visible"
                android:layout_marginTop="20sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="Lung disease"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:id="@+id/cond_hd"
                android:visibility="gone"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="Heart Disease"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:id="@+id/cond_none"
                android:visibility="gone"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="None of the above"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250sp"
        android:id="@+id/cond_ans"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_marginTop="10sp"
        android:paddingLeft="5sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingRight="5sp"
        android:background="@drawable/sa_ans_bkg"
        android:text="Hypertension,Lung disease"
        android:textSize="14sp"
        android:textColor="@color/black_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250sp"
        android:id="@+id/app_que"
        android:visibility="gone"
        android:layout_marginTop="10sp"
        android:paddingLeft="5sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingRight="10sp"
        android:background="@drawable/sa_ques_bkg"
        android:text="Which of the following apply to you?"
        android:textSize="14sp"
        android:textColor="@color/ans_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_int"
            android:visibility="gone"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:paddingLeft="10sp"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:background="@color/ans_color"
            android:text="Traveled internationally in the last 14 days"
            android:textSize="14sp"
            android:textColor="@color/PrimaryDarkColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_live"
            android:visibility="gone"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:paddingLeft="10sp"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:paddingRight="10sp"
            android:background="@color/ans_color"
            android:text="Recently interacted or lived or currently live with someone who has tested positive for COVID-19"
            android:textSize="14sp"
            android:textColor="@color/PrimaryDarkColor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:visibility="gone"
                android:id="@+id/app_worker"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="Am a healthcare worker"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250sp"
                android:id="@+id/app_none"
                android:visibility="gone"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:paddingLeft="10sp"
                android:paddingBottom="5sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:background="@color/ans_color"
                android:text="None of the above"
                android:textSize="14sp"
                android:textColor="@color/PrimaryDarkColor"/>
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250sp"
        android:id="@+id/app_ans"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_marginTop="10sp"
        android:paddingLeft="5sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingRight="5sp"
        android:background="@drawable/sa_ans_bkg"
        android:text="Am a healthcare worker"
        android:textSize="14sp"
        android:textColor="@color/black_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250sp"
        android:id="@+id/suggestion"
        android:visibility="gone"
        android:layout_marginTop="10sp"
        android:paddingLeft="5sp"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:paddingRight="10sp"
        android:background="@drawable/sa_ques_bkg"
        android:text="You are advised for testing as your infection risk is high.Please call the toll-free help line 1075 to schedule your testing.\n\n List of testing centers:\nhttps://icmr.nic.in/node/39071 \n\n\n Please visit \n https://www.mohfw.gov.in/ for more information on testing and quarantine guidelines."
        android:textSize="14sp"
        android:textColor="@color/ans_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250sp"
            android:id="@+id/left_next"
            android:visibility="gone"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="15sp"
            android:paddingLeft="10sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:background="@color/black_color"
            android:text="Next"
            android:textSize="14sp"
            android:textColor="@color/ans_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250sp"
            android:id="@+id/next"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="15sp"
            android:paddingLeft="10sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:background="@drawable/next_bkg"
            android:text="Next"
            android:textSize="14sp"
            android:textColor="@color/ans_color"/>
    </LinearLayout>
    </ScrollView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15sp"
            android:layout_marginTop="20sp"
            android:id="@+id/retry"
            android:gravity="right"
            android:background="@drawable/retry1"
            />
    </RelativeLayout>
